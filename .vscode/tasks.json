{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "label": "func: host start",
      "command": "host start",
      "problemMatcher": "$func-java-watch",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/quarkus-mcp-server/target/azure-function"
      },
      "dependsOn": "package (functions)"
    },
    {
      "label": "package (functions)",
      "command": "mvn clean package -Pdebug",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/quarkus-mcp-server"
      }
    }
  ]
}